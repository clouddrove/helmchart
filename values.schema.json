{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "cloudflare": {
      "type": "object",
      "properties": {
        "apiToken": {
          "type": "string",
          "description": "Cloudflare API token for authentication"
        },
        "zoneId": {
          "type": "string",
          "description": "Zone ID of your Cloudflare domain"
        }
      },
      "required": ["apiToken", "zoneId"]
    }
  }
}